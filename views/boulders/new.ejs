<% layout('layouts/boilerplate') %>
<link rel="stylesheet" type="text/css" href="/stylesheets/images.css">
<div class="row">
    <div class="col-6 offset-3">
        <div class="d-flex justify-content-between mb-3">
            <h1 class="d-inline">Create New Route</h1>
            <a href="/boulders/<%= placeName %>" class="btn btn-outline-info my-auto">Return</a>
        </div>
        <form action="/boulders/<%= placeName %>" method="POST" class="validated-form" enctype="multipart/form-data" novalidate>
            <div class="mb-3">
                <label class="form-label" for="name">Name of the Route:</label>
                <input class="form-control" type="text" name="name" id="name" placeholder="Route Name" required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="grade">Select a Grade:</label>
                <select class="form-select" name="grade" id="grade">
                    <% for (let gradeNum of gradesNum) { %>
                        <option value="<%= gradeNum %>"><%= gradeNum %></option>
                    <% } %>
                </select>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description of Route:</label>
                <textarea type="text" class="form-control" name="description" id="description" placeholder="Description Text"></textarea required>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="input-group mb-3">
                <input name="image" type="file" class="form-control" id="image" multiple required>
                <label class="input-group-text" for="image">Upload</label>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
                <label class="form-label">Add More Image(s)</label>
                <div class="form-file custom-file">
                      <input class="form-control custom-file-input" type="file" id="image" name="image" multiple onchange="previewMultiple(event)">
                      <label for="image" class="form-label custom-file-label"></label>
                </div>
                <div id="formFile"></div>
            </div>
            <button class="btn btn-primary w-100 mt-3 mb-5">Submit</button>
        </form>
    </div>
</div>


<script src='/javascripts/addMultipleImages.js'></script>