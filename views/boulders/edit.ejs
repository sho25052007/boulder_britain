<% layout('layouts/boilerplate') %>
<div class="row">
    <div class="col-6 offset-3">
        <div class="d-flex justify-content-between mb-3">
            <h1 class="d-inline">Edit Routes</h1>
            <a href="/boulders/<%= placeName %>" class="btn btn-outline-info my-auto">Return</a>
        </div>
        <form action="/boulders/<%= placeName %>?_method=PUT" method="POST" class="validated-form" novalidate>
            <% bouldersList.forEach((boulder, index) => { %>
            <div class="border border-2 border-top border-bottom my-3 p-3">
                <div class="mb-3">
                    <label class="form-label" for="name">Change Name of the Route:</label>
                    <input class="form-control" type="text" name="<%=index%>[name]" id="name" placeholder="Route Name" value="<%= boulder.name %>" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="grade">Select a Grade:</label>
                    <select class="form-select" name="<%=index%>[grade]" id="grade">
                        <% for (let gradeNum of gradesNum) { %>
                            <option value="<%= gradeNum %>" <%= boulder.grade === gradeNum?'selected':'' %>><%= gradeNum %></option>
                        <% } %>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Change Image of Route:</label>
                    <input type="text" class="form-control" name="<%=index%>[image]" id="image" placeholder="Image URL" value="<%= boulder.image %>" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Change Description of Route:</label>
                    <textarea type="text" class="form-control" name="<%=index%>[description]" id="description" placeholder="Description Text" required><%= boulder.description %></textarea>
                    <div class="valid-feedback">Looks good!</div>
                </div>
            </div>
            <% }) %>
            <button class="btn btn-primary w-100 mt-3 mb-5">Submit</button>
        </form>
    </div>
</div>